{
  "name": "pcoff-electron-agent",
  "version": "0.1.4",
  "private": true,
  "description": "5240 PcOff Agent Electron scaffold",
  "repository": {
    "type": "git",
    "url": "https://github.com/LeeKeonJong/PCOFF_TEST.git"
  },
  "main": "dist/app/main/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.preload.json",
    "postbuild": "node ./scripts/sync-static.mjs && node ./scripts/create-tray-icon.mjs",
    "preview:web": "npx serve -s build",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.preload.json",
    "simulator": "tsx simulator/cli.ts run --scenario update_success",
    "simulator:all": "tsx simulator/cli.ts run-all",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:win:x64": "electron-builder --win --x64",
    "dist:mac": "electron-builder --mac"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "@types/node": "latest",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "tsx": "latest",
    "typescript": "latest"
  },
  "build": {
    "appId": "com.tigris5240.pcoff-agent",
    "productName": "5240 PcOff Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "app/renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    },
    "publish": {
      "provider": "github"
    }
  }
}
